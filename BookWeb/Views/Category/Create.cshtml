@model Category

<form method="Post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2>
				Create Category
			</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="Name"></label>
			<input asp-for="Name" type="text" class="form-control"/>
		</div>
		<div class="mb-3">
			<label asp-for="DispalyOrder"></label>
			<input asp-for="DispalyOrder" class="form-control" />
		</div>
