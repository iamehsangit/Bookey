@model List<Product>
<div clss="container">
	<div class="row pt-4">
		<div class="col-6">
			<h2>Product List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller ="" asp-action="" class="btn btn-primary">Create New Product</a>
		</div>
	</div>
</div>
<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>
				Product Name
			</th>
			<th>
				Product Category
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var obj in Model)
		{
			<tr>
				<td>
					@obj.ProductName
				</td>
				<td>
					@obj.ProductCategory
				</td>
			</tr>
		}
	</tbody>
</table>